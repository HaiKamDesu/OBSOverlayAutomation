<Window x:Class="TournamentAutomation.Ui.PlayerSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Player" Height="420" Width="740"
        Background="#101315" Foreground="#EAEAEA"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
            <Button Width="90" Margin="0,0,8,0" Content="Add" Click="Add_Click" />
            <Button Width="90" Margin="0,0,8,0" Content="Edit" Click="Edit_Click" />
            <Button Width="90" Content="Remove" Click="Remove_Click" />
        </StackPanel>

        <ListView Name="PlayersList" Grid.Row="1" Margin="0,0,0,12" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="180" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Team" Width="140" DisplayMemberBinding="{Binding Team}" />
                    <GridViewColumn Header="Country" Width="90" DisplayMemberBinding="{Binding Country}" />
                    <GridViewColumn Header="Characters" Width="260" DisplayMemberBinding="{Binding Characters}" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Margin="6" Content="Cancel" Click="Cancel_Click" />
            <Button Width="90" Margin="6" Content="Select" Click="Select_Click" />
        </StackPanel>
    </Grid>
</Window>
