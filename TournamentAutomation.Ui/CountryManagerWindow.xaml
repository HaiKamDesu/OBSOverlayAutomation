<Window x:Class="TournamentAutomation.Ui.CountryManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Countries" Height="420" Width="740"
        Background="#101315" Foreground="#EAEAEA"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
            <Button Width="90" Margin="0,0,8,0" Content="Add" Click="Add_Click" />
            <Button Width="90" Margin="0,0,8,0" Content="Edit" Click="Edit_Click" />
            <Button Width="90" Content="Remove" Click="Remove_Click" />
        </StackPanel>

        <ListView Name="CountriesList" Grid.Row="1" Margin="0,0,0,12" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Code" DisplayMemberBinding="{Binding Code}" Width="120" />
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="160" />
                    <GridViewColumn Header="Flag Image Path" DisplayMemberBinding="{Binding FlagPath}" Width="380" />
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Margin="6" Content="Cancel" Click="Cancel_Click" />
            <Button Width="90" Margin="6" Content="Save" Click="Save_Click" />
        </StackPanel>
    </Grid>
</Window>
